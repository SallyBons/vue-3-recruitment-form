pipeline {
  agent {
    docker {
      image 'node:14-alpine'
    }
  }
  stages {
    stage('Clone Sources') {
      steps {
        git 'https://github.com/SallyBons/vue-3-recruitment-form'
        sh 'npm ci'
      }
    }   
    stage('Build') {
      steps {
        sh 'npm run build'
      }
    } 
  }
}